<configuration>
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>${user.home}/.muse/museide.log</file>

    <encoder>
      <pattern>%date %level [%file:%line] %msg%n</pattern>
    </encoder>

    <param name="Append" value="false" />
  </appender>

  <root level="error">
    <appender-ref ref="FILE" />
  </root>
</configuration>